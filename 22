#include <iostream>
#include <string>
#include <iomanip>

using namespace std; 



void PrintFibUsingLoop(short Number)
{
    int febNumber = 0;
    int prev2 = 0, prev1 = 1;
    cout << "1  ";
    for (short i = 2; i <= Number; ++i)
    {

        febNumber = prev1 + prev2;
        cout << febNumber << "   ";
        prev2 = prev1;
        prev1 = febNumber;

    }

}


int main()
{
  

 
  
   
    PrintFibUsingLoop(10);

  
    system("pause>0");




    


}

